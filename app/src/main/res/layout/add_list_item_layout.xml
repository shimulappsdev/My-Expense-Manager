<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="@dimen/_3sdp"
    app:cardCornerRadius="@dimen/_7sdp"
    android:layout_margin="@dimen/_5sdp"
    android:backgroundTint="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_5sdp"
        >
        <TextView
            android:id="@+id/addListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abel"
            android:text="Add List item"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/theme_color"
            android:layout_marginTop="@dimen/_3sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:id="@+id/fieldLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_7sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addListItem">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_2sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_3sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abel"
                        android:text="Item Name"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/theme_color"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/listItemName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abel"
                        android:hint="write here"
                        android:textStyle="normal"
                        android:textColor="@color/theme_color"
                        android:textColorHint="@color/ash"
                        android:textSize="@dimen/_10ssp"
                        android:inputType="text"
                        android:background="@drawable/item_edit_text_back"
                        android:backgroundTint="@color/off_white"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:paddingVertical="@dimen/_3sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/_3sdp"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginHorizontal="@dimen/_2sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_3sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abel"
                        android:text="Item Amount"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/theme_color"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/listItemAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abel"
                        android:hint="write here"
                        android:textStyle="normal"
                        android:textColor="@color/theme_color"
                        android:textColorHint="@color/ash"
                        android:textSize="@dimen/_10ssp"
                        android:inputType="numberDecimal"
                        android:background="@drawable/item_edit_text_back"
                        android:backgroundTint="@color/off_white"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:paddingVertical="@dimen/_3sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/_3sdp"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginHorizontal="@dimen/_2sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_3sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abel"
                        android:text="Item Quantity"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/theme_color"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/listItemQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@drawable/item_edit_text_back"
                        android:backgroundTint="@color/off_white"
                        android:fontFamily="@font/abel"
                        android:hint="write here"
                        android:inputType="numberDecimal"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:paddingVertical="@dimen/_3sdp"
                        android:textColor="@color/theme_color"
                        android:textColorHint="@color/ash"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="normal" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_marginHorizontal="@dimen/_2sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_3sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abel"
                        android:text="Item Unit"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/theme_color"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/listItemUnit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abel"
                        android:hint="write here"
                        android:textStyle="normal"
                        android:textColor="@color/theme_color"
                        android:textColorHint="@color/ash"
                        android:textSize="@dimen/_10ssp"
                        android:inputType="text"
                        android:background="@drawable/item_edit_text_back"
                        android:backgroundTint="@color/off_white"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:paddingVertical="@dimen/_3sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/_3sdp"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/insertBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_7sdp"
            app:cardCornerRadius="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_18sdp"
            app:layout_constraintTop_toBottomOf="@+id/fieldLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/insertItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/asul"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"
                android:textAllCaps="false"
                android:background="@color/theme_color"
                android:paddingHorizontal="@dimen/_15sdp"
                android:paddingVertical="@dimen/_7sdp"
                />

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>